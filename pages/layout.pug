doctype html
html
  head
    meta(name='viewport' content='width=device-width,initial-scale=1,shrink-to-fit=no')
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    script(type="module" src='https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.esm.js')
    script(type="text/javascript" src="/javascript/scroll-to-top.js" charset="utf-8")
    script(type="text/javascript" src="/javascript/topnav.js" charset="utf-8")
    script(type="text/javascript" src="/javascript/search.js" charset="utf-8")

    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(rel="icon" href="/images/favicon.png" type="images/x-icon")

    //- check if blogInfo object is present, a lot depends on it
    if blogInfo
      if isBlogPost
        title #{postMetaData.title} • #{blogInfo.blog.title}
      else if title
        title #{title} • #{blogInfo.blog.title}
      else
        title= blogInfo.blog.title
    
      meta(property='og:type' content='website')
      meta(property='og:site_name' content=blogInfo.blog.title)
      if isBlogPost
        meta(property='og:title' content=postMetaData.title)
        meta(property='og:description' content=postMetaData.description)
        meta(name='twitter:description' content=postMetaData.description)
        meta(property='og:url' content=path)
      else
        meta(property='og:title' content=blogInfo.blog.description + ' • ' + blogInfo.blog.title)
        meta(property='og:url' content='/')
        meta(property='og:description' content=blogInfo.blog.description)
      if isBlogPost && postMetaData.image !== undefined
        meta(property='og:image' content=postMetaData.image)
      else
        meta(property='og:image' content='/images/og-image-vm.png')

  if path === '/'
    - path = 'home'

  body(class=path)

    .body-inner
      block content

  if blogInfo
    //  Global site tag (gtag.js) - Google Analytics 
    script(async src='https://www.googletagmanager.com/gtag/js?id=' + blogInfo.appIds.googleAnalytics)
    script.    
      window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
    
        gtag('config', "#{blogInfo.appIds.googleAnalytics}");
