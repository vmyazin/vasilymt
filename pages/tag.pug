extends layout

block content
  include partials/header

  .container.page
    .row
      .col
        h2.mb-5
          span.badge.badge-accent Tag
          | 
          =tag

        p
          a(href="/tags") 
            |See all tags
            i.gg-chevron-right.align-middle

        ul.article-list.list-unstyled.plain-list
          each article, ind in articles
            li
              a(href="/blog/" + article.slug)
                h3=article.title
                | 
                small.text-nowrap.meta= article.date

  include partials/footer