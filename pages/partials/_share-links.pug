- allTags = ''
each tag, ind in postMetaData.tags
  - allTags += tag + ','
- allTags = allTags.slice(0, -1)
- url = encodeURI(postMetaData.fullUrl)
- tweet = encodeURI("On the blog: " + postMetaData.title + " " + postMetaData.fullUrl + "&hashtags=" + allTags)

p Share this post:
  ul
    li
      a(href="https://twitter.com/intent/tweet?text=" + tweet target="_blank") Twitter
    li
      a(href="https://www.facebook.com/sharer.php?u=" + url target="_blank") Facebook
    li
      a(href!="https://www.linkedin.com/shareArticle?url=" + url + "&title=" + postMetaData.title + "&source=" + blogInfo.blog.author target="_blank") LinkedIn
