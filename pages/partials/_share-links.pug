- allTags = ''
each tag, ind in postMetaData.tags
  - allTags += tag + ','
- allTags = allTags.slice(0, -1)
- url = encodeURI(postMetaData.fullUrl)
- message = encodeURI("On the blog: " + postMetaData.title + " " + postMetaData.fullUrl + "&hashtags=" + allTags)

p Share this post:
  ul
    li
      a(href="https://twitter.com/intent/tweet?text=" + message target="_blank") Twitter
    li
      a(href="https://www.facebook.com/sharer.php?u=" + url target="_blank") Facebook
