//- pages/partials/header.pug

nav.navbar.navbar-expand.header-with-gradient
  .container-xxl.flex-wrap
    a.navbar-brand(href="/")
      if site.project.logoAnimated
        img(src="/images/vm-logo-22-2b.svg", alt=site.project.siteName)
        img.on-hover(src=site.project.siteLogo, alt=site.project.siteName)
      else
        img(src=site.project.siteLogo, alt=site.project.siteName)
        
    ul.navbar-nav.ms-auto
      li.nav-item.d-none.d-sm-block
        a.nav-link(href='/' class=(path === '/' || path === 'home' ? 'active' : '')) Home
      if site.navigation.showBlog
        li.nav-item.ms-0.ms-sm-5
          a.nav-link(href='/blog/' class=(path.includes('blog') ? 'active' : '')) Blog
      li.nav-item.ms-5
        a.nav-link(href='/about/' class=(path.includes('about') ? 'active' : '')) About

