block content

  footer.footer.footer-alt
    .container-xxl.flex-wrap
      .row.mb-5
        .col-md-3
          a(href="/")
            img.footer-logo(src="/images/simon-logo-3d-out3.svg", alt=site.project.siteName)
        .col-md-9
          .row
            .col-md-4
              h3.footer-heading Content
              ul.footer-links
                if site.navigation.showBlog
                  li
                    a(href="/blog") Blog
                li
                  a(href="/now") Now
                if site.navigation.showBlog
                  li
                    a(href="/films") Movies

            .col-md-4
              h3.footer-heading Find Out
              ul.footer-links
                li
                  a(href="/about") About Me
                if site.social.instagram
                  li
                    a(href=site.social.instagram) Instagram
                if site.social.linkedin
                  li
                    a(href=site.social.linkedin) LinkedIn
                if site.social.twitter
                  li
                    a(href=site.social.twitter) X/Twitter

            .col-md-4
              h3.footer-heading Legal
              ul.footer-links
                li
                  a(href="/privacy") Privacy Policy
                li
                  a(href="/terms") Terms Of Service


      .footer-bottom.mt-4
        .row
          .col-md-4
            span.copyright Copyright &copy; #{siteInfo.currentYear} #{site.project.siteName}
          .col-md-4.text-md-center
            | .
          .col-md-4.text-md-end
            a.back-to-top(href="#") Back to top
